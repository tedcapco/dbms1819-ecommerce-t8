<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="table-responsive">
				<table>
					<h1>Customers</h1>
					<thead>
							<tr>
								<th>Name</th>
								<th>Email Address</th>
								<th>Customer Details</th>
							</tr>
					</thead>
					{{#each rows}}		
					<tbody>
							<tr>
								<td>{{this.first_name}} {{this.last_name}}</td>
								<td>{{this.email}}</td>
								<td>
									<a href="/customers/{{this.customer_id}}">More&nbsp;&raquo;</a>
								</td>
							</tr>
					</tbody>	
					{{/each}}
				</table>
			</div>
		</div>
	</div>
</div>