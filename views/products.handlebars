<div class="container">
	<div class="jumbotron mt-2">
		{{#each data}}
		<h1 class="mt-3 text-center">{{this.name}}</h1>
			<div class="col-lg-8 col-md-8 col-sm-8 mb-2 mx-auto" >
				<div class="card bg-secondary text-light center"  height = "350" width="250">
					<img class="card-img-top" src="{{this.pic}}" alt="" >
					<div class="card-body" >
						<!--<h4 class="card-title">Model Name: {{this.name}}</h4>
						--><h4 class="card-title">Brand: {{this.brand}}</h4>
							<h5 class="card-title">â‚± {{this.price}}</h5>
					
						<p>
							<h6 class="card-title">Type: {{this.type}}</h7>
						</p>
							<h6 class="card-title">Description: {{this.description}}</h7>
					</div>
				</div>
			</div>
		{{/each}}
		<div class="form-group">
			<div class="text-center">
				{{#each data}}
				<form method="GET" action="/product/update/{{this.id}}">
					<button type="submit" class="btn btn-success btn-block" title="Update Product">
					Update Product
					</button>
				</form>
				{{/each}}
			</div>
		</div>
	</div>
</div>

<div class="container pb-5 mb-5">
	<div class="jumbotron mt-2">
		<h2>Contact Form</h2>
		<h4>{{msg}}</h4>
		{{#each data}}
		<form method="POST" action="{{this.id}}/send">
			<div class="controls">
				<div class="form-group">
					<label class="control-label" for="name">Name *</label>
					<div>
						<input id="name" name="name" type="text" placeholder="Type your name.." class="form-control" required="">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label" for="phone">Phone *</label>
					<div>
						<input id="phone" name="phone" type="number" placeholder="xxxxx" class="form-control" required="">
					</div>
				</div>
				<div class="form-group">
					<label class="control-label" for="email">Email *</label>
					<div>
						<input id="email" name="email" type="text" placeholder="sample@gmail.com" class="form-control" required="">
					</div>
				</div>
				{{!-- <div class="form-group">
