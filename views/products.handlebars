					<label class="control-label" for="quantity">Quantity *</label>
					<div>
						<input id="quantity" name="quantity" type="number" placeholder="" class="form-control" required="">
					</div>
				</div>
				<div class="form-group">
					<div class="text-center">
						<button type="submit" class="btn btn-success btn-block" title="Submit contact form">
						Submit
						</button>
					</div>
				</div>
				{{/each}}
			</div>
		</form>
	</div>
</div>